@model EducationalPortal.Core.Entities.User

@{
    ViewData["Title"] = $"{Model.Name}";
}

<h5>Author</h5>

<div class="row d-flex flex-row justify-content-between">
    <section class="col-md-4">
        <div>
            <div class="d-flex">
                <img class="avatar" style="width:75px; height:75px; margin-right:10px;" src="@Model.Avatar"/>
                <div style="margin: auto 0">
                    <p class="mb-0 fs-5">@Model.Name</p>
                    <p class="text-primary mb-0 fs-5">@Model.Position</p>
                </div>
            </div>
        </div>
    </section>

    <section class="col-md-4">
        <div class="card my-1" style="width:300px">
            <div class="card-header">Skills:</div>
            <div class="card-body">
                @foreach (var userSkill in Model.UsersSkills)
                {
                    <div class="d-flex flex-row justify-content-between">
                        <h6>@userSkill.Skill.Name</h6>
                        <p class="text-primary">@userSkill.Level lvl</p>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

<hr />

<article class="mt-3">
    <h4>Created Courses:</h4>
    <div class="d-flex flex-wrap">
        @foreach (var course in Model.CreatedCourses)
        {
            <div class="card m-1" style="width: 18rem;">
                <img src="@course.Thumbnail" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@course.Name</h5>
                    <p class="card-text">@course.ShortDescription</p>
                </div>
                <a asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id" class="stretched-link"></a>
            </div>
        }
    </div>
</article>